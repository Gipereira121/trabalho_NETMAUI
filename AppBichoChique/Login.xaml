<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBichoChique.Login"
             Title=""
             BackgroundColor="#E8E8E8">
    
    <VerticalStackLayout Padding="30" Spacing="20">
        <Label 
            Text="Login"
            TextColor="Black"
            VerticalOptions="Center" 
            Padding="20, 30, 0 ,0" 
            FontAttributes="Bold"
            FontSize="30"/>

        <Label TextColor="Black" Padding="20, 0, 0, 0" Text="Realize seu logiin para continuar: "/>

        <Entry x:Name="etrEmail" Placeholder="Digite seu email" BackgroundColor="#D9B387" TextColor="#1E1E1E" PlaceholderColor="#1E1E1E" TranslationY="300"/>
        <Entry x:Name="etrSenha" Placeholder="Digite sua senha" BackgroundColor="#D9B387" TextColor="#1e1e1e" PlaceholderColor="#1E1E1E" TranslationY="300"/>
        <Button x:Name="btnLogar" Text="LOGAR"  Clicked="btnLogarOnClicked"  BackgroundColor="#FF9920" TextColor="white" FontSize="Medium" TranslationY="350"/>

    </VerticalStackLayout>
</ContentPage>